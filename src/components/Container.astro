---
import * as CONTENT from "../pages/content"
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"Sobre mi"} icon={"mdi:account-badge-outline"}>
    {CONTENT.about}
  </AccordionLayout>
    <AccordionLayout title={"Experiencia laboral"} icon={"ic:baseline-work-outline"}>
      {
        CONTENT.work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={item.skills}
              url="#"
              url_name={item.org}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Aficiones"} icon={"ion:md-build"}>
      {
        CONTENT.projects.map((item) => {
          return (
            <Card
              title={item.name}
              description={item.description}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Education"} icon={"carbon:education"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={"#"}
              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Contact"} icon={"ri:contacts-book-fill"}>
      {
        CONTENT.contact.map((item) => {
          return (
            <Card
              title={"Andrea valero"}
              timeframe=":)"
              description=""
              tags=""
              url={item.source}
              url_name={item.source_name}
            />
          );
        })
      }
    </AccordionLayout>
</ul>
